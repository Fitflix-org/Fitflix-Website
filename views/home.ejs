<% layout('layout') %>

<!-- Hero Section -->
<section class="hero-section position-relative overflow-hidden">
  <div class="hero-background-animation"></div>
  <div class="hero-particles"></div>
  <div class="hero-overlay"></div>
  
  <div class="container position-relative">
    <div class="row min-vh-100 align-items-center">
      <div class="col-lg-6">
        <div class="hero-content text-white">
          <div class="hero-badge mb-3">
            <span class="badge bg-primary-gradient px-3 py-2 fs-6 fw-semibold">
              <i class="fas fa-star me-2"></i>India's #1 Fitness Platform
            </span>
          </div>
          
          <h1 class="display-1 fw-bold mb-4 hero-title">
            Transform Your
            <span class="text-gradient d-block">Fitness Journey</span>
          </h1>
          
          <p class="lead mb-4 fs-4 text-light hero-subtitle">
            Join India's most premium fitness platform. Access world-class gyms, expert trainers, and personalized workout plans designed just for you.
          </p>
          
          <div class="hero-features mb-4">
            <div class="row g-3">
              <div class="col-auto">
                <div class="feature-pill">
                  <i class="fas fa-dumbbell me-2"></i>500+ Premium Gyms
                </div>
              </div>
              <div class="col-auto">
                <div class="feature-pill">
                  <i class="fas fa-user-tie me-2"></i>1000+ Expert Trainers
                </div>
              </div>
              <div class="col-auto">
                <div class="feature-pill">
                  <i class="fas fa-users me-2"></i>50K+ Happy Members
                </div>
              </div>
            </div>
          </div>
          
          <div class="hero-cta d-flex flex-wrap gap-3 mb-5">
            <a href="/gyms" class="btn btn-primary-gradient btn-lg px-5 py-3 fw-semibold hero-btn-primary">
              <i class="fas fa-search me-2"></i>Find Gyms
            </a>
            <a href="/contact" class="btn btn-red-gradient btn-lg px-5 py-3 fw-semibold">
              <i class="fas fa-phone me-2"></i>Enquire Now
            </a>
          </div>
          
          <!-- Trust Indicators -->
          <div class="hero-trust d-flex flex-wrap align-items-center gap-4">
            <div class="trust-item">
              <div class="d-flex align-items-center">
                <div class="trust-stars me-2">
                  <% for(let i = 1; i <= 5; i++) { %>
                    <i class="fas fa-star text-yellow"></i>
                  <% } %>
                </div>
                <span class="text-light">4.8/5 Rating</span>
              </div>
            </div>
            <div class="trust-item">
              <i class="fas fa-shield-alt text-success me-2"></i>
              <span class="text-light">100% Secure</span>
            </div>
            <div class="trust-item">
              <i class="fas fa-medal text-yellow me-2"></i>
              <span class="text-light">Award Winning</span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="hero-image-container">
          <div class="hero-image-wrapper">
            <img src="https://images.pexels.com/photos/1552242/pexels-photo-1552242.jpeg?auto=compress&cs=tinysrgb&w=800" 
                 alt="Fitness Training" 
                 class="img-fluid hero-image">
            <div class="hero-image-overlay">
              <div class="floating-card">
                <div class="d-flex align-items-center">
                  <div class="pulse-dot me-3"></div>
                  <div>
                    <h6 class="fw-bold mb-1">Live Workout</h6>
                    <p class="text-muted small mb-0">Join 2,847 active users</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <div class="scroll-arrow">
      <i class="fas fa-chevron-down"></i>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light section-padding">
  <div class="container">
    <div class="text-center mb-5 section-header">
      <div class="section-badge mb-3">
        <span class="badge bg-primary-gradient px-3 py-2">Why Choose FitFlix</span>
      </div>
      <h2 class="display-4 fw-bold text-dark mb-3">Experience Fitness Like Never Before</h2>
      <p class="lead text-muted">Discover what makes FitFlix the preferred choice for fitness enthusiasts</p>
    </div>
    
    <div class="row g-4">
      <div class="col-lg-3 col-md-6">
        <div class="feature-card h-100 text-center p-4">
          <div class="feature-icon mb-3">
            <i class="fas fa-dumbbell"></i>
          </div>
          <h4 class="fw-bold mb-3">Premium Equipment</h4>
          <p class="text-muted">State-of-the-art fitness equipment from leading brands worldwide</p>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6">
        <div class="feature-card h-100 text-center p-4">
          <div class="feature-icon mb-3">
            <i class="fas fa-user-tie"></i>
          </div>
          <h4 class="fw-bold mb-3">Expert Trainers</h4>
          <p class="text-muted">Certified professionals with years of experience to guide your journey</p>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6">
        <div class="feature-card h-100 text-center p-4">
          <div class="feature-icon mb-3">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h4 class="fw-bold mb-3">Smart Booking</h4>
          <p class="text-muted">Easy online booking system for classes, trainers, and facilities</p>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-6">
        <div class="feature-card h-100 text-center p-4">
          <div class="feature-icon mb-3">
            <i class="fas fa-chart-line"></i>
          </div>
          <h4 class="fw-bold mb-3">Progress Tracking</h4>
          <p class="text-muted">Advanced analytics to monitor and optimize your fitness progress</p>
        </div>
      </div>
    </div>
  </div>
</section>



<!-- Featured Gyms -->
<section class="py-5 section-padding">
  <div class="container">
    <div class="text-center mb-5 section-header">
      <div class="section-badge mb-3">
        <span class="badge bg-primary-gradient px-3 py-2">Premium Locations</span>
      </div>
      <h2 class="display-4 fw-bold text-dark mb-3">Featured Gyms</h2>
      <p class="lead text-muted">Discover our premium gym locations across the city</p>
    </div>
    
    <div class="row g-4">
      <% if (typeof featuredGyms !== 'undefined') { %>
        <% featuredGyms.forEach((gym, index) => { %>
          <div class="col-lg-6">
            <div class="gym-card-modern position-relative overflow-hidden" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
              <div class="gym-image-container">
                <img src="<%= gym.image %>" alt="<%= gym.name %>" class="gym-image">
                <div class="gym-badge">
                  <i class="fas fa-star text-yellow"></i>
                  <%= gym.rating %>
                </div>
              </div>
              <div class="gym-content">
                <h3 class="fw-bold mb-2"><%= gym.name %></h3>
                <p class="mb-3 text-muted">
                  <i class="fas fa-map-marker-alt me-2"></i><%= gym.location %>
                </p>
                <div class="gym-amenities mb-3">
                  <% gym.amenities.slice(0, 3).forEach(amenity => { %>
                    <span class="amenity-tag"><%= amenity %></span>
                  <% }) %>
                </div>
                <div class="d-flex gap-2">
                  <a href="/gym/<%= gym.id %>" class="btn btn-outline-primary btn-sm flex-fill">View Details</a>
                  <a href="/contact" class="btn btn-red-gradient btn-sm flex-fill">Enquire Now</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
    
    <div class="text-center mt-5">
      <a href="/gyms" class="btn btn-outline-primary btn-lg px-5">
        <i class="fas fa-eye me-2"></i>View All Gyms
      </a>
    </div>
  </div>
</section>

<!-- Meet Our Team -->
<section class="py-5 bg-light section-padding">
  <div class="container">
    <div class="text-center mb-5 section-header">
      <div class="section-badge mb-3">
        <span class="badge bg-yellow-gradient px-3 py-2 text-dark">Our Leadership</span>
      </div>
      <h2 class="display-4 fw-bold text-dark mb-3">Meet Our Team</h2>
      <p class="lead text-muted">The passionate professionals behind FitFlix's success</p>
    </div>
    
    <div class="row g-4">
      <% if (typeof teamMembers !== 'undefined') { %>
        <% teamMembers.forEach((member, index) => { %>
          <div class="col-lg-3 col-md-6">
            <div class="team-card" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
              <div class="team-image-container">
                <img src="<%= member.image %>" alt="<%= member.name %>" class="team-image">
              </div>
              <div class="team-content">
                <h4 class="fw-bold mb-2"><%= member.name %></h4>
                <p class="text-primary mb-2 fw-semibold"><%= member.role %></p>
                <p class="text-muted small mb-3"><%= member.bio %></p>
                <div class="team-social">
                  <a href="<%= member.linkedin %>" class="text-decoration-none">
                    <i class="fab fa-linkedin-in"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</section>



<!-- CTA Section -->
<section class="cta-section py-5 bg-primary-gradient text-white">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8">
        <h2 class="display-5 fw-bold mb-3">Ready to Transform Your Life?</h2>
        <p class="lead mb-0">Join thousands of fitness enthusiasts who have already started their journey with FitFlix</p>
      </div>
      <div class="col-lg-4 text-lg-end">
        <a href="/contact" class="btn btn-yellow-gradient btn-lg px-5 py-3 fw-semibold cta-btn">
          <i class="fas fa-play me-2"></i>Get Started Today
        </a>
      </div>
    </div>
  </div>
</section>