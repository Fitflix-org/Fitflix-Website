<% layout('layout') %>

<!-- 404 Error Page -->
<section class="error-page py-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-6">
        <div class="error-content">
          <div class="error-icon mb-4">
            <i class="fas fa-exclamation-triangle fs-1 text-primary"></i>
          </div>
          <h1 class="display-1 fw-bold text-primary mb-3">404</h1>
          <h2 class="fw-bold mb-3">Page Not Found</h2>
          <p class="lead text-muted mb-4">
            Oops! The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
          </p>
          <div class="error-actions">
            <a href="/" class="btn btn-primary btn-lg me-3">
              <i class="fas fa-home me-2"></i>Go Home
            </a>
            <a href="/contact" class="btn btn-outline-primary btn-lg">
              <i class="fas fa-envelope me-2"></i>Contact Support
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Helpful Links -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-4">
      <h3 class="fw-bold mb-3">Maybe you were looking for:</h3>
    </div>
    <div class="row g-3 justify-content-center">
      <div class="col-md-3 col-6">
        <a href="/gyms" class="btn btn-outline-primary w-100">
          <i class="fas fa-dumbbell me-2"></i>Find Gyms
        </a>
      </div>
      <div class="col-md-3 col-6">
        <a href="/trainers" class="btn btn-outline-primary w-100">
          <i class="fas fa-user-tie me-2"></i>Find Trainers
        </a>
      </div>
      <div class="col-md-3 col-6">
        <a href="/memberships" class="btn btn-outline-primary w-100">
          <i class="fas fa-card-membership me-2"></i>Memberships
        </a>
      </div>
      <div class="col-md-3 col-6">
        <a href="/services" class="btn btn-outline-primary w-100">
          <i class="fas fa-spa me-2"></i>Services
        </a>
      </div>
    </div>
  </div>
</section>