<% layout('layout') %>

<!-- Page Header -->
<section class="page-header bg-primary text-white py-5">
  <div class="container text-center">
    <h1 class="display-4 fw-bold mb-3">Membership Plans</h1>
    <p class="lead mb-0">Choose the perfect plan for your fitness journey</p>
  </div>
</section>

<!-- Pricing Plans -->
<section class="py-5">
  <div class="container">
    <div class="row g-4 justify-content-center">
      <!-- Basic Plan -->
      <div class="col-lg-4 col-md-6">
        <div class="pricing-card h-100">
          <div class="pricing-header">
            <h3 class="fw-bold mb-3">Basic</h3>
            <div class="price mb-3">
              <span class="currency">₹</span>
              <span class="amount">2,999</span>
              <span class="period">/month</span>
            </div>
            <p class="text-muted">Perfect for beginners starting their fitness journey</p>
          </div>
          
          <div class="pricing-features">
            <ul class="list-unstyled">
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Access to all FitFlix gyms</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Basic equipment usage</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Mobile app access</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Progress tracking</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Locker facility</li>
              <li class="mb-2"><i class="fas fa-times text-muted me-2"></i>Group classes</li>
              <li class="mb-2"><i class="fas fa-times text-muted me-2"></i>Personal training</li>
              <li class="mb-2"><i class="fas fa-times text-muted me-2"></i>Nutrition consultation</li>
            </ul>
          </div>
          
          <div class="pricing-footer">
            <a href="/book?type=membership&plan=basic" class="btn btn-outline-primary w-100 btn-lg">Choose Basic</a>
          </div>
        </div>
      </div>
      
      <!-- Premium Plan -->
      <div class="col-lg-4 col-md-6">
        <div class="pricing-card featured h-100">
          <div class="pricing-badge">Most Popular</div>
          <div class="pricing-header">
            <h3 class="fw-bold mb-3">Premium</h3>
            <div class="price mb-3">
              <span class="currency">₹</span>
              <span class="amount">4,999</span>
              <span class="period">/month</span>
            </div>
            <p class="text-muted">Best value for serious fitness enthusiasts</p>
          </div>
          
          <div class="pricing-features">
            <ul class="list-unstyled">
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Everything in Basic</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Unlimited group classes</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>2 personal training sessions/month</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Nutrition consultation</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Priority booking</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Guest passes (2/month)</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Wellness workshops</li>
              <li class="mb-2"><i class="fas fa-times text-muted me-2"></i>Spa access</li>
            </ul>
          </div>
          
          <div class="pricing-footer">
            <a href="/book?type=membership&plan=premium" class="btn btn-primary w-100 btn-lg">Choose Premium</a>
          </div>
        </div>
      </div>
      
      <!-- Elite Plan -->
      <div class="col-lg-4 col-md-6">
        <div class="pricing-card h-100">
          <div class="pricing-header">
            <h3 class="fw-bold mb-3">Elite</h3>
            <div class="price mb-3">
              <span class="currency">₹</span>
              <span class="amount">7,999</span>
              <span class="period">/month</span>
            </div>
            <p class="text-muted">Ultimate fitness experience with premium benefits</p>
          </div>
          
          <div class="pricing-features">
            <ul class="list-unstyled">
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Everything in Premium</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Unlimited personal training</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Unlimited guest passes</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Spa & wellness center access</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>24/7 gym access</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>VIP locker room</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Complimentary massages</li>
              <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Corporate events access</li>
            </ul>
          </div>
          
          <div class="pricing-footer">
            <a href="/book?type=membership&plan=elite" class="btn btn-outline-primary w-100 btn-lg">Choose Elite</a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Additional Info -->
    <div class="row mt-5">
      <div class="col-12">
        <div class="membership-info bg-light p-4 rounded">
          <h4 class="fw-bold mb-3">Membership Benefits</h4>
          <div class="row g-4">
            <div class="col-md-3">
              <div class="text-center">
                <i class="fas fa-clock fs-2 text-primary mb-2"></i>
                <h6 class="fw-bold">Flexible Hours</h6>
                <p class="text-muted small">Access gyms during convenient hours</p>
              </div>
            </div>
            <div class="col-md-3">
              <div class="text-center">
                <i class="fas fa-mobile-alt fs-2 text-primary mb-2"></i>
                <h6 class="fw-bold">Mobile App</h6>
                <p class="text-muted small">Book classes and track progress</p>
              </div>
            </div>
            <div class="col-md-3">
              <div class="text-center">
                <i class="fas fa-users fs-2 text-primary mb-2"></i>
                <h6 class="fw-bold">Community</h6>
                <p class="text-muted small">Join fitness challenges and events</p>
              </div>
            </div>
            <div class="col-md-3">
              <div class="text-center">
                <i class="fas fa-award fs-2 text-primary mb-2"></i>
                <h6 class="fw-bold">Expert Support</h6>
                <p class="text-muted small">Guidance from certified trainers</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- FAQ Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold mb-3">Frequently Asked Questions</h2>
      <p class="lead text-muted">Get answers to common membership questions</p>
    </div>
    
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="accordion" id="faqAccordion">
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                Can I freeze my membership?
              </button>
            </h2>
            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
              <div class="accordion-body">
                Yes, you can freeze your membership for up to 3 months per year due to medical reasons, travel, or other valid circumstances. Contact our support team for assistance.
              </div>
            </div>
          </div>
          
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                Can I change my membership plan?
              </button>
            </h2>
            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
              <div class="accordion-body">
                Absolutely! You can upgrade or downgrade your membership plan at any time. Changes will take effect from the next billing cycle.
              </div>
            </div>
          </div>
          
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                Is there a contract commitment?
              </button>
            </h2>
            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
              <div class="accordion-body">
                We offer both month-to-month and annual membership options. Annual memberships come with significant discounts but require a 12-month commitment.
              </div>
            </div>
          </div>
          
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                What if I'm not satisfied?
              </button>
            </h2>
            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
              <div class="accordion-body">
                We offer a 30-day money-back guarantee for new members. If you're not completely satisfied within the first 30 days, we'll refund your membership fee.
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>